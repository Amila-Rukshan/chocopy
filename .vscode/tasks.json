{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build (Debug)",
        "type": "shell",
        "linux": {
          "command": "mkdir -p ${workspaceFolder}/build && cd ${workspaceFolder}/build && cmake -G Ninja -DCMAKE_BUILD_TYPE=Debug .. && cmake --build ."
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Build Test (Debug)",
        "type": "shell",
        "linux": {
          "command": "mkdir -p ${workspaceFolder}/build && cd ${workspaceFolder}/build && cmake -G Ninja -DENABLE_TESTS=ON -DCMAKE_BUILD_TYPE=Debug .. && cmake --build ."
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
}
